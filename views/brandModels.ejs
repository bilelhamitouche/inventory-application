<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="/style.css" rel="stylesheet">
  </head>
  <body class="p-4">
    <%- include("partials/navbar") %>
    <% if(models.length > 0) { %>
      <ul class="grid grid-cols-4 gap-4 p-4">
        <% models.forEach((model) => { %>
          <%- include("partials/model", { model: model }) %>
        <% }) %>
      </ul>
    <% } else { %>
      <h1 class="text-center p-4">No models for this brand</h1>
    <% } %>
  </body>
</html>
